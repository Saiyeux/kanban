<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主内容容器，支持手势检测 -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 主内容区域 -->
        <LinearLayout
            android:id="@+id/main_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/main_background">

            <!-- 顶部工具栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/toolbar_background"
                android:elevation="8dp">

                <!-- 主工具栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="50dp"
                    android:gravity="center_vertical">

                    <!-- 侧边栏切换按钮 -->
                    <ImageButton
                        android:id="@+id/sidebar_toggle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_menu"
                        android:contentDescription="切换任务列表" />

                    <TextView
                        android:id="@+id/selected_task_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请选择一个任务"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_add_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_add"
                        android:visibility="gone"
                        app:fabSize="normal"
                        app:backgroundTint="@color/primary"
                        app:tint="@color/text_on_primary"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp" />

                </LinearLayout>

                <!-- 事件统计信息 -->
                <LinearLayout
                    android:id="@+id/events_stats_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone">

                    <!-- 第一行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- 总事件数 -->
                        <LinearLayout
                            android:id="@+id/total_stats_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/bg_floating_card"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="2dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_event_count"
                                android:layout_marginEnd="4dp"
                                android:alpha="0.7" />

                            <TextView
                                android:id="@+id/total_events_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总计: 0"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <!-- 已完成事件数 -->
                        <LinearLayout
                            android:id="@+id/completed_stats_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/bg_floating_card"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:layout_marginStart="6dp"
                            android:elevation="2dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_check_circle"
                                android:layout_marginEnd="4dp"
                                app:tint="@color/status_completed" />

                            <TextView
                                android:id="@+id/completed_events_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="完成: 0"
                                android:textSize="11sp"
                                android:textColor="@color/status_completed" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 第二行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 进行中事件数 -->
                        <LinearLayout
                            android:id="@+id/in_progress_stats_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/bg_floating_card"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:layout_marginEnd="6dp"
                            android:elevation="2dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_in_progress"
                                android:layout_marginEnd="4dp"
                                app:tint="@color/status_in_progress" />

                            <TextView
                                android:id="@+id/in_progress_events_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="进行中: 0"
                                android:textSize="11sp"
                                android:textColor="@color/status_in_progress" />

                        </LinearLayout>

                        <!-- 待处理事件数 -->
                        <LinearLayout
                            android:id="@+id/pending_stats_container"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/bg_floating_card"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:layout_marginStart="6dp"
                            android:elevation="2dp"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_pending"
                                android:layout_marginEnd="4dp"
                                app:tint="@color/status_pending" />

                            <TextView
                                android:id="@+id/pending_events_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待处理: 0"
                                android:textSize="11sp"
                                android:textColor="@color/status_pending" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- 事件列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/events_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:clipToPadding="false" />

            <!-- 空状态显示 -->
            <LinearLayout
                android:id="@+id/empty_state_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_swipe_right"
                    android:alpha="0.7"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="向右滑动显示任务列表"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="或点击左上角菜单按钮"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"
                    android:alpha="0.9" />

            </LinearLayout>

        </LinearLayout>

        <!-- 边缘滑动指示器 -->
        <View
            android:id="@+id/edge_indicator"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="0dp"
            android:background="@drawable/edge_swipe_indicator"
            android:alpha="0.3"
            android:visibility="gone" />

        <!-- 侧边栏遮罩 -->
        <View
            android:id="@+id/sidebar_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="true" />

    </FrameLayout>

    <!-- 侧边栏 -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sidebar_background"
        android:elevation="16dp"
        android:translationX="-280dp">

            <!-- 侧边栏头部 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="任务列表"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_add"
                    app:fabSize="normal"
                    app:backgroundTint="@color/secondary"
                    app:tint="@color/text_on_primary"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp" />

            </LinearLayout>

            <!-- 任务列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasks_recycler"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:clipToPadding="false" />

        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>